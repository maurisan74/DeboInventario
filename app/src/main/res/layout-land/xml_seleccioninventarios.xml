<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Elegir el inventario"
        android:textColor="@color/black"
        android:textSize="@dimen/titulo" />

    <ScrollView
        android:id="@+id/SI_scrollview"
        android:layout_width="700dp"
        android:layout_height="270dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:padding="15dp" >

        <TableLayout
            android:id="@+id/SI_tablaMenuScrollable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" >

            <ProgressBar
                android:id="@+id/SI_progressbar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </TableLayout>
    </ScrollView>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/SI_boton_precedente"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="40dp"
                android:text="Volver"
                android:visibility="visible" />

            <Button
                android:id="@+id/SI_boton_usb"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginEnd="40dp"
                android:text="Importar Dispositivos"
                android:visibility="visible" />

            <Button
                android:id="@+id/SI_boton_refresh"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginEnd="40dp"
                android:text="Refrescar"
                android:visibility="visible" />

            <Button
                android:id="@+id/SI_boton_siguiente"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Seguir"
                android:visibility="invisible" />
        </TableRow>
    </TableLayout>

</LinearLayout>