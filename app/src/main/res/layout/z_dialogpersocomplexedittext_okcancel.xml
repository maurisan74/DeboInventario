<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/DIALOG_main"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal"
	android:padding="5px"
	android:background="@color/black" >

    <LinearLayout
    	android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:gravity="center_vertical">
    
	    <ImageView android:id="@+id/DIALOG_imagen"
	        android:src="@drawable/icono_text_default"
	    	android:layout_width="100px"
	        android:layout_height="100px"
	        android:padding="10px"
	        android:scaleType="fitCenter"
	        android:layout_marginRight="10px" />
	    
	    <LinearLayout 
	        android:layout_width="300px"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center_horizontal" >
	        
	        <TextView android:id="@+id/DIALOG_mensaje"
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:textColor="@color/white"
	            android:textSize="@dimen/talla_texto_medio" />
	        
	        <EditText android:id="@+id/DIALOG_edittext"
	            android:layout_width="300px"
	            android:layout_height="wrap_content"
	            android:singleLine="true" />
	        
	    </LinearLayout>
    
   </LinearLayout>
   
   <LinearLayout android:id="@+id/DIALOG_botones"
   	   android:orientation="horizontal"
   	   android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:padding="5px"
       android:layout_gravity="center_horizontal">
	    
       <Button android:id="@+id/DIALOG_boton_ok"
           android:layout_width="100px"
           android:layout_height="50px"
           android:layout_marginRight="30px"
           android:text="OK"
           android:textSize="@dimen/talla_texto_medioGrande"/>
       
       <Button android:id="@+id/DIALOG_boton_cancel"
           android:layout_width="100px"
           android:layout_height="50px"
           android:layout_marginLeft="30px"
           android:text="Cancelar"
           android:textSize="@dimen/talla_texto_medioGrande"/>
       
   </LinearLayout>

</LinearLayout>