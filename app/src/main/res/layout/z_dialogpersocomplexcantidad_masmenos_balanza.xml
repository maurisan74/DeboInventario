<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
    
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        >
	    
	        <ImageView android:id="@+id/Z_DIALOG_imagen" 
	            android:layout_height="80dp"
	            android:layout_width="80dp"
	            android:padding="8dp"
	            android:src="@drawable/dialog_alertar"
	            android:scaleType="fitXY"
	            />
	    
		    <LinearLayout 
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:gravity="center_horizontal"
		        android:orientation="vertical"
		        >
		        
		        <TextView
			        android:layout_height="wrap_content"
			        android:layout_width="300dp"
			        android:text="El artÃ­culo seleccionado ya fue inventariado con la cantidad siguiente:"
			        android:textSize="@dimen/talla_texto_medio"
			        android:gravity="center"
			        />
		        
		        <EditText android:id="@+id/Z_DIALOG_articulo_cantidad"
			        android:layout_height="wrap_content"
			        android:layout_width="match_parent"
			        android:text="13"
			        android:inputType="numberDecimal"
			        android:textSize="@dimen/talla_texto_grande"
			        android:gravity="center"
			        />
		        
		    </LinearLayout>
	    </LinearLayout>
	    
	    
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:gravity="center_horizontal"
	        android:orientation="vertical"
	        > 
	          
		    <LinearLayout 
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:gravity="center_vertical"
		        android:orientation="horizontal"
		        >
		        
		        <RelativeLayout android:id="@+id/Z_DIALOG_fondo_boton_menos" 
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_marginEnd="20dp"
		            >

					<ImageView
						android:id="@+id/Z_DIALOG_boton_menos"
						android:layout_width="120dp"
						android:layout_height="wrap_content"
						android:scaleType="centerInside"
						android:src="@drawable/boton_menos" />
		            
		            <TextView 
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:paddingTop="5dp"
		                android:paddingStart="5dp"
		                android:layout_centerInParent="true"
		                android:text="Restar"
		                android:textColor="@color/black"
		                android:textSize="@dimen/talla_texto_medio"
		                />
	            </RelativeLayout>
	            
		        <RelativeLayout android:id="@+id/Z_DIALOG_fondo_boton_modificar" 
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_marginEnd="20dp"
		            >
		            <ImageView android:id="@+id/Z_DIALOG_boton_modificar" 
			            android:layout_height="wrap_content"
			            android:layout_width="120dp"
			            android:src="@drawable/boton_equal"
			            android:scaleType="centerInside"
			            />
		            
		             <TextView 
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:paddingTop="5dp"
		                android:layout_centerInParent="true"
		                android:text="Modificar"
		                android:textColor="@color/black"
		                android:textSize="@dimen/talla_texto_medio"
		                />
		        </RelativeLayout>
		        
		        <RelativeLayout android:id="@+id/Z_DIALOG_fondo_boton_mas" 
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            >
			        <ImageView android:id="@+id/Z_DIALOG_boton_mas" 
			            android:layout_height="wrap_content"
			            android:layout_width="120dp"
			            android:src="@drawable/boton_mas"
			            android:scaleType="centerInside"
			            />
			        
			         <TextView 
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:paddingTop="5dp"
		                android:layout_centerInParent="true"
		                android:text="Sumar"
		                android:textColor="@color/black"
		                android:textSize="@dimen/talla_texto_medio"
		                />
			    </RelativeLayout>
		        
		    </LinearLayout>
		    
		        
		    <Button android:id="@+id/Z_DIALOG_boton_cancelar" 
		            android:layout_height="38dp"
		            android:layout_width="wrap_content"
		            android:layout_marginTop="20dp"
		            android:text="Cancelar"
		            android:textSize="@dimen/talla_texto_medioChico"
		            /> 
	    </LinearLayout>
	</LinearLayout>
</RelativeLayout>