<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/DIALOG_main1"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="5px" >

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:padding="10px" >

		<ImageView
			android:id="@+id/DIALOG_imagen"
			android:layout_width="80px"
			android:layout_height="80px"
			android:layout_marginRight="10px"
			android:padding="10px"
			android:scaleType="fitCenter" />

		<LinearLayout
			android:layout_width="300px"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/DIALOG_texto"
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:textColor="@color/white"
				android:textSize="@dimen/talla_texto_medio" />

			<TableLayout
				android:id="@+id/DIALOG_zona_box"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >
			</TableLayout>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/DIALOG_main"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="center_horizontal"
		android:orientation="horizontal"
		android:padding="5px" >

		<Button
			android:id="@+id/DIALOG_boton_validar_wifi"
			android:layout_width="wrap_content"
			android:layout_height="50px"
			android:text="Por WiFi"
			android:textSize="@dimen/talla_texto_medioGrande" />

		<Button
			android:id="@+id/DIALOG_boton_validar_usb"
			android:layout_width="wrap_content"
			android:layout_height="50px"
			android:text="Por USB"
			android:visibility="gone"
			android:textSize="@dimen/talla_texto_medioGrande" />

		<Button
			android:id="@+id/DIALOG_boton_flash"
			android:layout_width="wrap_content"
			android:layout_height="50px"
			android:text="@string/flash"
			android:visibility="gone"
			android:textSize="@dimen/talla_texto_medioGrande" />

		<Button
			android:id="@+id/DIALOG_boton_sdcard"
			android:layout_width="wrap_content"
			android:layout_height="50px"
			android:text="@string/sdcard"
			android:textSize="@dimen/talla_texto_medioGrande" />

		<Button
			android:id="@+id/DIALOG_boton_cancelar"
			android:layout_width="wrap_content"
			android:layout_height="50px"
			android:text="Cancelar"
			android:textSize="@dimen/talla_texto_medioGrande" />
	</LinearLayout>

</LinearLayout>