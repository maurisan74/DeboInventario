<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/DIALOG_layout"
	android:orientation="vertical"
	android:layout_width="400px"
	android:layout_height="wrap_content"
	android:paddingLeft="2px"
	android:paddingRight="2px" >
	
    <TextView android:id="@+id/DIALOG_texto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/talla_texto_medio"
		android:textColor="@color/white"
		android:layout_gravity="center_horizontal" />
    
	<ImageView android:id="@+id/DIALOG_imagen"
		android:layout_width="200px"
		android:layout_height="150px"
		android:layout_margin="10px"
		android:scaleType="centerInside"
		android:layout_gravity="center_horizontal" />	
		
	<LinearLayout android:id="@+id/DIALOG_boton_box"
   	   android:orientation="horizontal"
   	   android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:padding="5px"
       android:layout_gravity="center_horizontal">
	    
       <Button android:id="@+id/DIALOG_boton_validar"
           android:layout_width="150px"
           android:layout_height="40px"
           android:layout_marginRight="30px"
           android:text="Aceptar foto"
           android:textSize="@dimen/talla_texto_medio"/>
       
       <Button android:id="@+id/DIALOG_boton_cancelar"
           android:layout_width="150px"
           android:layout_height="40px"
           android:layout_marginLeft="30px"
           android:text="Volver a tomar"
           android:textSize="@dimen/talla_texto_medio"/>
       
   </LinearLayout>
	
</LinearLayout>