<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/DIALOG_main1"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="5px">
          
    <LinearLayout
    	android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:gravity="center_vertical">
    
	    <ImageView android:id="@+id/DIALOG_imagen"
	    	android:layout_width="100px"
	        android:layout_height="100px"
	        android:padding="10px"
	        android:scaleType="fitCenter"
	        android:layout_marginRight="10px" />
	    
	    <LinearLayout 
	        android:layout_width="300px"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center_horizontal" >
	        
	        <TextView android:id="@+id/DIALOG_texto"
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:textColor="@color/white"
	            android:textSize="@dimen/talla_texto_medio" />
	        
	    </LinearLayout>
    
   </LinearLayout>
   
   <LinearLayout
	   android:id="@+id/DIALOG_main"
   	   android:orientation="horizontal"
   	   android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:padding="5px"
       android:layout_gravity="center_horizontal">
	    
       <Button android:id="@+id/DIALOG_boton_validar"
           android:layout_width="100px"
           android:layout_height="50px"
           android:layout_marginRight="30px"
           android:text="SÃ­"
           android:textSize="@dimen/talla_texto_medioGrande"/>
       
       <Button android:id="@+id/DIALOG_boton_cancelar"
           android:layout_width="100px"
           android:layout_height="50px"
           android:layout_marginLeft="30px"
           android:text="No"
           android:textSize="@dimen/talla_texto_medioGrande"/>
       
   </LinearLayout>
    
</LinearLayout>