<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_margin="10px"
                android:scaleType="fitXY"
                android:src="@drawable/zoom" />

            <TextView
                android:id="@+id/Z_DIALOG_mensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="mensaje"
                android:textColor="@color/white"
                android:textSize="@dimen/talla_texto_medio" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/Z_DIALOG_editext"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:hint="Articulo..."
                android:lines="1" />

            <ImageView
                android:id="@+id/Z_DIALOG_boton_buscar"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="15px"
                android:scaleType="fitXY"
                android:src="@drawable/boton_buscar_up" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/Z_DIALOG_boton_cancelar"
        android:layout_width="90px"
        android:layout_height="40px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Cancelar"
        android:textSize="@dimen/talla_texto_chico" />

</LinearLayout>